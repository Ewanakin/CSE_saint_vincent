{% extends 'base.html.twig' %}
{% block body %}
    <div class="flex">
        {% include('navbar/backoffice/index.html.twig') %}
        <div class="relative w-full p-5 z-1">
            <h1 class="title">Liste des partners</h1>
            <div class="mt-8 z-1" x-data="{open: false}">
                <div class="flex space-x-12">
                    <div class="w-2/5 box-border">
                        <h5 class="text-primary font-bold">Pr√©nom</h5>
                    </div>
                    <div class="w-2/5 box-border">
                        <h5 class="text-primary font-bold">Nom</h5>
                    </div>
                    <div class="w-2/5 box-border">
                        <h5 class="text-primary font-bold">Email</h5>
                    </div>
                    <div class="w-4/5 box-border">
                        <h5 class="text-primary font-bold">Message</h5>
                    </div>
                    <div class="w-1/5 box-border">
                        <h5 class="text-primary font-bold">Action</h5>
                    </div>
                </div>
                {% for contact in contacts %}
                    <div class="py-3 flex space-x-12 border-solid border-b border-primary">
                        <div class="w-2/5 box-border">
                            {{contact.firstName}}
                        </div>
                        <div class="w-2/5 box-border">
                            {{contact.lastName}}
                        </div>
                        <div class="w-2/5 box-border">
                            {{contact.email}}
                        </div>
                        <div class="w-4/5 box-border">
                            {{contact.message}}
                        </div>
                        <div class="w-1/5">
                            <a href="{{path('contact_delete', {contact: contact.id})}}">Supprimer</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <aside class="flex md:flex-row flex-col absolute bottom-16 right-16 md:space-x-4 md:space-y-0 space-x-2 space-y-2 text-center">
        <a href="{{ path('partner_add') }}" class="md:p-3 p-2 md:text-lg text-sm rounded-full border-primary border-solid bg-primary text-[#fff] hover:opacity-50">Ajouter un partner</a>
    </aside>
{% endblock %}