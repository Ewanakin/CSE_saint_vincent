{% extends 'base.html.twig' %}

{% block title %}Hello PartnerController!{% endblock %}

{% block body %}
    {% include('navbar/index.html.twig') %}
    <div class="mt-10 space-y-22">
    <div class="bg-black">
        {% for partner in partners %}
        <div class="relative mt-16">
            <div class="absolute -top-16 flex flex-col items-center">
                <img class="rounded-full object-scale-down h-20 w-50 ml-12" alt="photo patner" src="{{partner.link}}">
            </div>
            <div class="flex">
                <div class="bg-[#A9A9A9] w-full flex justify-center">
                    <h4 class="ml-4">Nom : {{partner.name}}</h4>
                </div>
            </div>
            <div class="bg-[#A9A9A9]">
                <p>Lien du site : <a href="{{partner.website}}">{{partner.website}}</a></p>
                <p>Description : {{partner.description}}</p>
                <img alt="photo patner" src="{{partner.link}}">
            </div>
        </div>
        {% endfor %}
    </div>
    {% include('footer/index.html.twig') %}
{% endblock %}
