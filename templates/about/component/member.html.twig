<div>
    <h3 class="text-secondary text-xl">Membres du CSE</h3>
    <div class="grid md:grid-cols-3 grid-cols-2 mt-8 ">
        {% for member in about.members %}
            <div class="flex flex-col items-center mb-12">
                {% if member.picture == null %}
                    <img src="{{ asset('files/placeholder.png') }}" class="xl:w-2/4 w-3/4 rounded-full">
                {% else %}
                    <img src="{{ asset(member.picture) }}" class="xl:w-2/4 w-3/4 rounded-full">
                {% endif %}
                <p class="text-primary lg:text-lg text-xs mt-3">{{ member.firstname }} {{ member.name }}</p>
            </div>
        {% endfor %}
    </div>
</div>