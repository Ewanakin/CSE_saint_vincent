{% extends 'base.html.twig' %}
{% block body %}
    <div class="flex space-x-5">
        <div class="bg-primary w-1/5 h-screen box-border">

        </div>
        <div class="relative w-full p-3" x-data="{open: false}">
            <h1 class="title">Liste des Membres</h1>
            <div class="mt-8">
                <div class="flex space-x-12 ">
                    <div class="w-2/5 box-border">
                        <h5 class="text-primary font-bold">Nom des membres</h5>
                    </div>
                    <div class="w-3/5 box-border">
                        <h5 class="text-primary font-bold">Actions</h5>
                    </div>
                </div>
                {% for member in members %}
                    <div class=" py-3 flex space-x-12 border-solid border-b border-primary">
                        <div class="w-2/5 box-border">
                            <h3>{{ member.name }}</h3>
                        </div>
                        <div class="space-x-5 w-3/5">
                            <a href="{{ path('edit_member', {offer: member.id}) }}">Modifier</a>
                            {% include('component/remove.html.twig') with {'method': 'remove_member', 'member': member } %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}