{% extends 'base.html.twig' %}

{% block body %}
    <div class="flex flex-row space-x-5">
        <div class="bg-primary w-1/6 h-screen box-border">

        </div>
        <div class="flex flex-col justify-center items-center w-full space-y-5">
            <aside class="flex mt-28 space-x-5">
                <p class="text-primary"> Accéder à : </p>
                <a href="{{ path('list_members') }}" class="text-xl text-primary underline hover:font-bold">Liste des membres</a>
                <a href="" class="text-xl text-primary underline hover:font-bold">Liste des actions</a>
            </aside>
            <div class="flex justify-center w-full h-4/6 space-x-8 p-5 text-center">
                <div class="w-1/3 h-2/5 border border-primary hover:w-3/6 ease-in duration-200">
                    {% if aboutUs != null %}
                        <a href="{{ path('edit_about', {'aboutUs': aboutUs.id}) }}" class="w-full h-full flex justify-center items-center">
                            <h3 class="text-3xl text-primary">Modifier la page à propos</h3>
                        </a>
                    {% else %}
                        <a href="{{ path('create_about') }}" class="w-full h-full flex justify-center items-center">
                            <h3 class="text-3xl text-primary">Modifier la page à propos</h3>
                        </a>
                    {% endif %}
                </div>
                {% if aboutUs != null %}
                <div class="w-1/3 h-2/5 border border-primary hover:w-3/6 ease-in duration-200">
                    <a href="{{ path('create_member') }}" class="w-full h-full flex justify-center items-center">
                        <h3 class="text-3xl text-primary">Créer un membre du CSE</h3>
                    </a>
                </div>
                <div class="w-1/3 h-2/5 border border-primary hover:w-3/6 ease-in duration-200">
                    <a href="{{ path('create_action') }}" class="w-full h-full flex justify-center items-center">
                        <h3 class="text-3xl text-primary">Créer une action du CSE</h3>
                    </a>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}